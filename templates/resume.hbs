<h1>{{name}}</h1>
<p class="subtitle">{{title}}</p>

<div class="section" style="--order: 1;">
    <h2>Contato</h2>
    <p>Email: {{contact.email}}</p>
    <p>Telefone: {{contact.phone}}</p>
    <p>GitHub: <a href="https://{{contact.github}}" target="_blank">{{contact.github}}</a></p>
    <p>LinkedIn: <a href="https://{{contact.linkedin}}" target="_blank">{{contact.linkedin}}</a></p>
</div>

<div class="section" style="--order: 2;">
    <h2>Resumo</h2>
    <p>{{summary}}</p>
</div>

<div class="section" style="--order: 3;">
    <h2>Experiência</h2>
    {{#each experience}}
        <h3>{{role}} - {{company}}</h3>
        <p>{{period}}</p>
        <p>{{description}}</p>
    {{/each}}
</div>

<div class="section" style="--order: 4;">
    <h2>Educação</h2>
    {{#each education}}
        <h3>{{degree}} - {{institution}}</h3>
        <p>{{period}}</p>
    {{/each}}
</div>

<div class="section" style="--order: 5;">
    <h2>Habilidades</h2>
    <ul>
        {{#each skills}}
            <li>{{this}}</li>
        {{/each}}
    </ul>
</div>