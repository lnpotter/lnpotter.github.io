<h1>{{name}}</h1>
<p>{{title}}</p>

<div class="section">
    <h2>Contato</h2>
    <p>Email: {{contact.email}}</p>
    <p>Telefone: {{contact.phone}}</p>
    <p>GitHub: <a href="https://{{contact.github}}">{{contact.github}}</a></p>
    <p>LinkedIn: <a href="https://{{contact.linkedin}}">{{contact.linkedin}}</a></p>
</div>

<div class="section">
    <h2>Resumo</h2>
    <p>{{summary}}</p>
</div>

<div class="section">
    <h2>Experiências</h2>
    {{#each experience}}
        <h3>{{role}} - {{company}}</h3>
        <p>{{period}}</p>
        <p>{{description}}</p>
    {{/each}}
</div>

<div class="section">
    <h2>Graduações</h2>
    {{#each education}}
        <h3>{{degree}} - {{institution}}</h3>
        <p>{{period}}</p>
    {{/each}}
</div>

<div class="section">
    <h2>Habilidades</h2>
    <ul>
        {{#each skills}}
            <li>{{this}}</li>
        {{/each}}
    </ul>
</div>